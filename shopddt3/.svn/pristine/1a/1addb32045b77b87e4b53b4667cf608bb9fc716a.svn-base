    //用户中心管理
    public function index(){
        $user = new UserService;
        $shop = new ShopService;
        $Order = new OrderService;
        $searchForm['username'] = trim(I('get.username','','strval'));
        $searchForm['region'] = trim(I('get.region','','strval'));
