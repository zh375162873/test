<script>
   function zhi_xf(id){
	   if(confirm("确定要置为已消费吗")){
		   $.post("<?php echo U('Order/zhi_yxf');?>",{id:id},function(data){
			   if(data.error == 0){
				   alert(data.message);
				   $("#dhmstatus_"+data.id).html("已经消费");
				   
			   }else{
				   alert(data.message);
			   }
		   },"json")
		   
	   }else{
		   return false;
	   }
   }   
</script>

