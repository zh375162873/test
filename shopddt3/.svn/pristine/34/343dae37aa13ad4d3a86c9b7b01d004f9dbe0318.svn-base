                }
            }
        }
        function chgNum(a) {
            var number = $$("#number");
            var storenum = $("#msg").html();
            var p = parseInt(number.value);
			var virtual_limit = $("#virtual_limit").val();

            if (a == 1) {
                //alert("此商品只能购买一个~！");return false;
                if (p < storenum) {
                    number.value = ++p;
					if(number > virtual_limit){
					  alert("此商品为限购商品，已达到最大数量~！");
					  return false;
					}

                } else {
                    alert("已达到最大数量~！");
                    return false;
                }
            }
            else {
                if (p > 1) number.value = --p;
            }
        }
		
