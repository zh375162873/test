.home_nav_huodong{
            position:relative;
            margin:8px 8px 0 8px;
            background:#fff;
            border-radius:5px;
            overflow:hidden;
            box-shadow:1px 3px 5px #d8d7d7;
        }
        .home_nav_huodong ul li{
            float:left;
            display:block;
            width:50%;
            -webkit-box-sizing:border-box;
            box-sizing:border-box;
        }
        .home_nav_huodong ul li a{
            display:block;
            overflow:hidden;
        }
        .borderBm{
            border-bottom:1px solid #f3f3f3;
        }
        .borderRt{
