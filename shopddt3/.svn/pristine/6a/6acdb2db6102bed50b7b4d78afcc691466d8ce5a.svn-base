<div class="row headerNav" id="headerNav">
    <ul>
        <li data-url="{:U('goods/goods_common_list')}" onclick="jumpTo(this);">所有商品</li>
        <li data-url="{:U('goods/goods_list')}" onclick="jumpTo(this);">现金商品</a></li>
