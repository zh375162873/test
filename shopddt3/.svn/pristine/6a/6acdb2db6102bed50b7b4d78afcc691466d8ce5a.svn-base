				 <th class="sortAbility title1" style="border-right:1px solid #CCCCCC"><a href="{:U('/admin/goods/goods_prize_list',array('order'=>12))}">已售</a></th>
				</if>
				
				<if condition="empty($_GET['order']) or ($_GET['order'] eq 14)">
