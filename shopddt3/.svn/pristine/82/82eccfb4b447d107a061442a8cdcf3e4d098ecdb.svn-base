@charset "utf-8";
/*样式重置*/
*,*:before,*:after {margin: 0; border: 0; padding: 0; -webkit-box-sizing: border-box; box-sizing: border-box}
ol,ul,li { list-style: none}
a, button, input {outline: 0;text-decoration: none;-webkit-tap-highlight-color: transparent;}
img {-miui-use-broken-image: none}
.clearfix:before,.clearfix:after {content: "";display: table}
.clearfix:after {clear: both}
*::-webkit-scrollbar {display: none}
body{font-family:arial,sans-serif;font:16px/1.5 "Microsoft YaHei",\5fae\8f6f\96c5\9ed1,arial,\5b8b\4f53;color:#4a596a;outline:0;background-color:#F3F3F3;}
a{text-decoration:none; color:#FFF;}
.viewport {max-width: 720px;
           margin:auto;
           overflow: hidden;
}
button,input {font-family:"Microsoft YaHei";}
i {font-style: normal;}
b {
    font-family: arial,sans-serif;
    font: 16px/1.5 "Microsoft YaHei",\5fae\8f6f\96c5\9ed1,arial,\5b8b\4f53;
