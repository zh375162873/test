/*未登录动画*/
.loginOut{
	position:relative;
	-webkit-animation: myscale 1s infinite alternate;
	-o-animation: myscale 1s infinite alternate;
	animation: myscale 1s infinite alternate;
}
@-webkit-keyframes myscale {
	from {-webkit-transform: scale(1,1);-o-transform: scale(1,1);transform: scale(1,1);}
	to {-webkit-transform: scale(1.2, 1.2);-o-transform: scale(1.2, 1.2);transform: scale(1.2, 1.2);  }
}
@-o-keyframes myscale {
	from {-webkit-transform: scale(1,1);-o-transform: scale(1,1);transform: scale(1,1);}
	to {-webkit-transform: scale(1.2, 1.2);-o-transform: scale(1.2, 1.2);transform: scale(1.2, 1.2);  }
}
@keyframes myscale {
	from {-webkit-transform: scale(1,1);-o-transform: scale(1,1);transform: scale(1,1);}
	to {-webkit-transform: scale(1.2, 1.2);-o-transform: scale(1.2, 1.2);transform: scale(1.2, 1.2);  }
}
