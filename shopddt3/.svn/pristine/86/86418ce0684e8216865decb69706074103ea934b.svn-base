	<script type="text/javascript">
        var $$ = function (obj) {
            if (obj != null && obj != undefined && obj.toString().length > 0) {
                if (obj[0] == '#') {
                    return document.getElementById(obj.substr(1, obj.length - 1));
                }
            }
        }
        function chgNum(a) {
            var number = $$("#number");
            var storenum = $("#msg").html();
            var p = parseInt(number.value);
		    <if condition="$goods.virtual_limit gt 0">	
                var virtual_limit = $("#virtual_limit").val();
            </if>
            if (a == 1) {
                if (p < storenum) {
                <if condition="$goods.virtual_limit gt 0">	
                        if (p >= virtual_limit) {
                            alert("此商品为限购商品，已达到最大数量~！");
                            return false;
                        }
                </if>
                    number.value = ++p;
                } else {
                    if (storenum == 0) {
                        alert("亲，已经没有库存了~！");
                        $("#number").val(storenum);
                        return false;
                    }

                    alert("已达到最大数量~！");
                    return false;
                }
            }
            else {
                if (p > 1) number.value = --p;
            }
        }

        //提交立即购买前验证函数
        function check(form) {
            /*例子如下
             if(form.userId.value=='') {
             alert("请输入用户帐号!");
             form.userId.focus();
             return false;
             }*/

            //验证限购
            var number = $$("#number");
            var storenum = $("#msg").html();
            var p = parseInt(number.value);
            var r = /^[0-9]*[1-9][0-9]*$/;
            var $quantity = $("#number")
            var quantity = $quantity.val();
            if(quantity&&quantity!="0"&&!(r.test(quantity))){
                $quantity.val(1);
                alert("只能输入正整数哦！");
                return false;
            }
            if (storenum == 0) {
                alert("亲，已经没有库存了~！");
                //$("#number").val(storenum);
                $("#number").val(0);
                return false;
            }

            if(!p||p<1){
                alert("购买数量不能太少哦！");
                $("#number").val(1);
                return false;
            }

		   <if condition="$goods.virtual_limit gt 0">	
                var virtual_limit = $("#virtual_limit").val();
           </if>
            //验证库存和限购
            if (p < storenum) {
               <if condition="$goods.virtual_limit gt 0">	
                    if (p > virtual_limit) {
                        alert("此商品只能购买" + virtual_limit + "个!");
                        $("#number").val(1);
                        return false;
                    }
               </if>
            }
            if (p > storenum && storenum > 0) {
                alert("已达到最大数量~！");
                $("#number").val(storenum);
                return false;
            }

            return true;
        }
        function checkQuantity(_form){
            if(check(_form)){
                addcart('{$goods.goods_id}',$("#number").val(),'');
                return true;
            }
            return false;
        }
    </script>
	
