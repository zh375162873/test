<script>
function refund_qx(orderid,dhm_id){
	$.post("{:U('order/refund_qx')}",{orderid:orderid,dhm_id:dhm_id},function(data){
		 if(data['error']==1){
			alert(data['msg']);
			window.location.href="{:U('Home/order/orderinfo',array('id'=>$orderinfo['order_id']))}";
		 }else{
			 alert(data['msg']);
		 }
	},"json");
}
</script>
