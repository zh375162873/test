   /*goods*/
	.goods{
		font-size:0;
	}
	.goods_pic{
		text-align:center;
	}
	.goods_item{
		width:48.5%;
		display:inline-block;
		border:1px solid #DDD;
		margin:0 0 10px 1%;
	}
	.goods_name,.goods_price{
		width:100%;
		text-align:center;
		font-size:20px;
		word-break:keep-all;
		white-space:nowrap;
		overflow:hidden;
		text-overflow:ellipsis;
	}
	.goods_name{
		border-bottom:1px dashed #DDD;
	}
	/*---------end--------*/