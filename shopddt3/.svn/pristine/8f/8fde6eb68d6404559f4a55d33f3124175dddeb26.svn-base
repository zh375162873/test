	//渠道下的推广人员分成支付
	public function ChannelmemberPay(){
	  if(IS_POST){
	   $flag=1;
	   if($flag==1){
		  $this->success ( '支付成功', U ( 'admin/Commission/ChannelmemberList/Channel_id/'.I('Channel_id') ) ); 
	   }else{
		 $this->error ("操作失败");
	   }
	 }else{ 
       $this->display('ChannelmemberPay');
	 }
