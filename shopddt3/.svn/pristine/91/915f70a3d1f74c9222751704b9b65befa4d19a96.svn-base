/**--------商品列表区域-------------------*/
        .home_list{
            margin:10px 8px 0 8px;
            background:#fff;
            border-radius:5px;
            overflow:hidden;
            box-shadow:1px 3px 5px #d8d7d7;
        }
        .home_list section{
            overflow:hidden;
            border-bottom:1px solid #f3f3f3;
        }
        .list_nav_title{
            display:inline-block;
            padding:9px 6px;
            margin-left: 3px;
        }
        .list_nav_img{
            float:right;
            height:43px;
            width:auto;
        }
        .goods_content{
            display: block;
            padding: 12px 6px 12px 0;
            margin-left: 9px;
            text-decoration: none;
        }
        .goodImg{
            float: left;
            position: relative;
            width: 85px;
            overflow: hidden;
            /*background:url(./res/bg.png) no-repeat;*/
            background-size: 100% 100%;
        }
        .goodImg img{
            display: block;
            width: 85px;
            height: 85px;
        }
        .goodInfo{
            position:relative;
            margin-left:100px;
        }
        .title_line{
            line-height: 16px;
            height: 16px;
            overflow: hidden;
            margin-top:4px;
        }
        .title_line .title{
            float:left;
            height:16px;
            line-height:16px;
            max-width:100%;
        }
        .title_line .title .item_name{
            max-width: 100%;
            font-size: 16px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin:0;
            padding:0;
        }
        .title_line .wz{
            display:none;
            float: right;
            font-size: 12px;
        }
        .goodInfo .desc{
            line-height: 16px;
            height: 32px;
            margin: 8px 0;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            font-size: 12px;
        }
        .price_line{
            line-height: 16px;
            height: 16px;
            font-size: 0;
            overflow: hidden;
        }
        .price_line ins{
            margin-right: 5px;
            font-size: 16px;
            font-weight: 700;
            text-decoration: none;
        }
        .price_line del{
            margin-right: 5px;
            font-size: 12px;
        }
        .price_line span{
            float: right;
            margin-left: 16px;
            font-size: 12px;
        }
        /**结束--------商品列表区域-------------------*/
		
		.home_search{
            display:block;
            height:43px;
            margin-right:45px;
            line-height:43px;
            color:#fbbeb4;
        } 
        .home_search::before{
            content:"";
            display:inline-block;
            width:35px;
            height:35px;
            background:url(./images/index/nav_search_0.png) center;
            background-size:100% 100%;
            vertical-align:middle;
            margin-right:10px;
        }
