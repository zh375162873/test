			        "goods_divided" => $goods_arr['goods_divided'],
			        "goods_num" => $goods_arr['goods_num'],
			        "goods_image" => $goods_arr['goods_image'],
			        "shop_id" => $goods_arr['shop_id'],
			        "store_id" => $goods_arr['store_id'],
