<script>
    $(function () {
        /*初始化时间控件*/
        $('#begin_time').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            language: "zh-CN",
            orientation: "top auto",
            todayHighlight: true
        });
        $('#end_time').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            language: "zh-CN",
            orientation: "top auto",
            todayHighlight: true
        });
        checkOder();
    });
    function checkOder(){
        var order = $("#sortFlag").val();
        if(!order){
            return;
        }
        order = parseInt(order);
        var index;
        if((order%2)==0){
            index = order/2;
        }else{
            index = (order+1)/2;
        }
        $("th a").eq(index-1).parent().addClass("active");
    }
</script>

