/**--------商品列表区域-------------------*/
    .search_div{
            margin: 0 8px;
            background: #fff;
        }
		
		.home_search{
            display:block;
            height:43px;
            margin-right:45px;
            line-height:43px;
            color:#fbbeb4;
        } 
        .home_search::before{  
            content:"";
            display:inline-block;
            width:35px;  
            height:35px;
            background:url(/Public/temp/style7/web/images/nav_search_0.png) center;
            background-size:100% 100%;
            vertical-align:middle;
            margin-right:10px;
        }
		
		

.search_form{
            position:relative;
            margin: 1px 8px;
            background: #fff;
        }
        .search_key{
            display: block;
            height: 41px;
            color: #7d7d7d;
            font-size:16px;
            -webkit-box-sizing:border-box;
            -moz-box-sizing:border-box;
            box-sizing:border-box;
            width:100%;
            padding-right:40px;
            padding-left:12px;
            background:transparent;
            border:1px solid #f3f3f3;
            outline:none;
            -webkit-border-radius:4px;
            -moz-border-radius: 4px;
            border-radius: 4px;;
        }
        .search_key:focus{
            outline:none!important;
        }
        .search_form button{
            position:absolute;
            top:3px;
            right:0;
            display:block;
            width:35px;
            height:35px;
            background:url(/Public/temp/style7/web/images/nav_search_0.png) center;
            background-size:100% 100%;
            border:none;
            outline:none;
        }		
