<script>
    function add_fav_good(good_id){
        $.ajax({
            type: "POST",
            url: "__APP__/home/Favorite/addfav_goods",
            data: "goods_id="+good_id,
            success: function(data){
                if(data.status==1){
                    $("#shoucang1").show();
                    $("#shoucang2").hide();
                }
                alert(data.info);
            }
        });
    }
    function del_fav_good(good_id){
        $.ajax({
            type: "POST",
            url: "__APP__/home/Favorite/delfavorite",
            data: "fav_id="+good_id,
            success: function(data){
                if(data.status==1){
                    $("#shoucang2").show();
                    $("#shoucang1").hide();
                }
                alert(data.info);
            }
        });
    }
</script>
