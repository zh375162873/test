<script>
    $(function () {
        /*初始化时间控件*/
        $('#start_date').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            language: "zh-CN",
            orientation: "top auto",
			startDate:new Date(),
            todayHighlight: true
        });
        $('#end_date').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            language: "zh-CN",
            orientation: "top auto",
			startDate:new Date(),
            todayHighlight: true
        });
		$('#start_date').datepicker().on('changeDate', function(ev){
            var end = $("#end_date").val();
            if (end && ev.date.valueOf() > (new Date(end).valueOf())){
                alert("开始日期不可大于结束日期");
				$('#start_date').val('');
            }
        });
		$('#end_date').datepicker().on('changeDate', function(ev){
            var start = $("#start_date").val();
            if (start && ev.date.valueOf() < (new Date(start).valueOf())){
                alert("结束日期不得小于开始日期");
				$('#end_date').val('');
            }
        });
    });
	
